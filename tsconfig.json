{
  "compilerOptions": {
    "target": "ES2020",               
    "module": "CommonJS",             
    "moduleResolution": "node",       
    "outDir": "./dist",               
    "rootDir": "./src",               
    "esModuleInterop": true,         
    "skipLibCheck": true,             
    "strict": true,                   
    "forceConsistentCasingInFileNames": true, 
    "declaration": true,              
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ]         
  },
  "include": ["src/**/*"],              
  "exclude": ["node_modules"]           
}
